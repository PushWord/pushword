{% extends '@Pushword/component/_section.html.twig' %}

{% if page.relatedPages is defined and page.relatedPages is not empty %}
    {% set pages = page.relatedPages %}
    {% set id = 'related' %}
    {% set light = true %}
        {% block title %}
            <div class="mb-2">
                <h4 class="mb-3">{{ 'relatedPages.title'|trans }}</h4>
            </div>
        {% endblock %}
        {% block body %}
            <div class="row">
            {% include '@Pushword/page/_list.html.twig' with {pages: pages} only %}
            </div>
        {% endblock %}
{% else %}
    {% set exist = false %}
{% endif %}
