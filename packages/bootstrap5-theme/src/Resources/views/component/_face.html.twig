
{% set image = getImageFrom(image_src) %}
<picture>
    <source type="image/webp" srcset="{{ image.fullPathWebP|imagine_filter('thumb') }}" />
    <img
        class="img-fluid rounded-circle shadow"
        loading=lazy
        alt="{{ image_alt }}"
        srcset="{{ image.fullPath|imagine_filter('thumb') }}"
        src="{{ image.fullPath|imagine_filter('default') }}"
        width="10000" height="10000" />
    </picture>
<div class="text-center mt-3">
    <div class="font-weight-light mb-2">{{ subtitle|raw }}</div>
    <span class="h5">{{ title|raw }}</span>
</div>