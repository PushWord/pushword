#!/bin/bash -e

function restoreData {
    echo 'restore data...'
    sh ./.scripts/data-restore
    composer update
}
trap restoreData EXIT
sh ./.scripts/data-preserve

XDEBUG_MODE=off php -dxdebug.mode=off vendor/bin/phpunit --stop-on-failure --debug

composer update --prefer-lowest
XDEBUG_MODE=off php -dxdebug.mode=off vendor/bin/phpunit --stop-on-failure --debug