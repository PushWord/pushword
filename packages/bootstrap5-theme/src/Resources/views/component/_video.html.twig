{#
    @param string embed_code
    @param string alt
    @param string image
    @param string btn_title
    @param string btn_style
    @param string wrapper_class
#}
<div class="{{'position-relative my-3 '~(wrapper_class|default(''))}}" replaceBy="<div class=container-video>{{ embed_code|replace({'"':"'"}) }}</div>">
    {%
        include view('component/_inline_image.html.twig') with {
            'image_src': image,
            'image_alt': alt|striptags,
            'image_link': false
        }
    %}
    <button class=" {{ btn_style is defined and btn_style == 'circle' ? 'btn btn-outline-primary rounded-pill btn-play' : (btn_style)|default('btn btn-danger rounded btn-play shadow') }}">
        {{btn_title|default('Lire la vid√©o') }}
    </button>

</div>