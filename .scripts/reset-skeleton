#!/bin/bash -e

#Â Locally link js-helper
# cd packages/js-helper; yarn link; cd ../core; yarn link @pushword/js-helper; cd ../../

cd packages/skeleton
rm var/app.db|| true
rm -rf media|| true
cp -r media~ media
