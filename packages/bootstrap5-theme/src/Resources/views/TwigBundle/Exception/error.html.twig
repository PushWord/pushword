{% extends '@Pushword/base.html.twig' %}

{% block title %}{{ 'error.title'|trans }}{% endblock %}

{% block body %}
    {% block content %}{% endblock %}

<div class="fullscreen container container-txt pt-5 pb-5">
    <span class=subtitle>{{ (status_code is defined ? 'error.serverSay'|trans ~ ' <em>' ~ status_code ~ '</em> <em>' ~ status_text ~ '</em>' : null)|raw }}</span>
    <h1>{{ 'error.title'|trans|raw }}</h1>
    <p>{{ 'error.description'|trans|raw }}</p>
</div>
{% endblock %}
